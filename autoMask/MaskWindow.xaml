<Window x:Class="autoMask.MaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:autoMask"
        Title="MaskWindow" Height="500" Width="400">
    <StackPanel Orientation="Vertical">
        <TabControl x:Name="chipReports" Height="420" Margin="5,0"/>
        <DockPanel>
            <Button Click="Generate_File_Click" DockPanel.Dock="Right" HorizontalAlignment="Right" Width="100"
              Height="30" Margin="5">Generate File</Button>
            <Button Click="Save_Config_Click" x:Name="saveMaskBtn" DockPanel.Dock="Right" HorizontalAlignment="Right"
              Width="100" Margin="5" IsEnabled="False">Save chips</Button>
            <Button Click="Add_Chip_Click" DockPanel.Dock="Left" HorizontalAlignment="Left" Width="30" Height="30"
              Margin="5">+</Button>
            <Button Click="Remove_Chip_Click" DockPanel.Dock="Left" HorizontalAlignment="Left" Width="30" Height="30"
              Margin="5">-</Button>
        </DockPanel>
    </StackPanel>
</Window>